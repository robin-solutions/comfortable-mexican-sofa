.page-header
  = link_to t('.new_link'), new_comfy_admin_cms_site_path, :class => 'button secondary right'
  %h2= t('.title')

= render 'comfy/admin/cms/partials/sites_before'

%table.table.table-hover.table-bordered
  - @sites.each do |site|
    %tr
      %td
        .icon
      %td.main
        .item-title
          = link_to site.label, comfy_admin_cms_site_pages_path(site)
        .item-meta
          .identifier
            = site.identifier
            = "(#{site.locale})"
          .host
            = link_to site.url, site.url, :target => '_blank'
      %td
        %ul.button-group
          %li= link_to t('.select'),  comfy_admin_cms_site_pages_path(site), :class => 'button secondary tiny'
          %li= link_to t('.edit'), edit_comfy_admin_cms_site_path(site), :class => 'button secondary tiny'
          %li= link_to t('.delete'), comfy_admin_cms_site_path(site), :method => :delete, :data => {:confirm => t('.are_you_sure')}, :class => 'button alert tiny'
          
= render 'comfy/admin/cms/partials/sites_after'