= render 'comfy/admin/cms/partials/file_form_before', :form => form

= form.text_field :label
= form.file_field :file, :multiple => @file.new_record?

- unless @file.new_record?
  = form.label t('.current_file')
    - if @file.is_image?
      .file-image= image_tag @file.file.url 
    = link_to @file.file.url, @file.file.url, :target => '_blank'

= form.text_area :description

= render 'comfy/admin/cms/categories/form', :form => form

= render 'comfy/admin/cms/partials/file_form_after', :form => form

= form.submit t(@file.new_record?? '.create' : '.update'), :class => 'button'
= link_to t('.cancel'), comfy_admin_cms_site_files_path, :class => 'button secondary'
