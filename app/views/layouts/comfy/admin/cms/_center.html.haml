- flash.each do |type, message|
  - box_style = type == 'notice' ? 'warning' : 'success'
  .alert{:class => "alert-box #{box_style}",:tabindex => '0', :aria_live => 'assertive', :data => { :alert => true } }
    = message
    %button.close{:tabindex => '0', :aria_label => 'Close Alert', :href => '#'} &times;

.center-column-content
  = yield